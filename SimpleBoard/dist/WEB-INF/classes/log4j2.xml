<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
	<Appenders>
		<Console name="STDOUT">
			<PatternLayout pattern="[%thread] %level %message%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="myapp" level="debug" additivity="false">
			<AppenderRef ref="STDOUT" />
		</Logger>
		<Root level="error">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>